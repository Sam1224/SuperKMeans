# Include the license and readme
include LICENSE
include README.md

# Include CMake files
include CMakeLists.txt
recursive-include cmake *.cmake

# Include headers
recursive-include include *.h *.hpp

# Include extern dependencies
recursive-include extern *.h *.hpp *.cmake CMakeLists.txt

# Include Python bindings
recursive-include python *.cpp *.h

# Exclude build artifacts
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.so
global-exclude *.o
